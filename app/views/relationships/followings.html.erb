<table class='table table-hover table-inverse'>
    <div class='container'>
      <div class='row'>
        <div class='col-md-12'>
            <h2>Follow Users</h2>

             <thead>
               <tr>
                 <th>image</th>
                 <th>name</th>
                 <th colspan="3"></th>
               </tr>
             </thead>
             <tbody>
            <% if @users.exists? %>
               <% @users.each do |user| %>
               <tr>
                 <td><%= attachment_image_tag(user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg") %></td>
                 <td><%= user.name %></td>
                 <td>フォロー数: <%= user.followed_users.count %></td>
                 <td>フォロワー数: <%= user.followers.count %></td>
                 <td><%= link_to 'Show', user_path(user), class: "user_#{user.id}" %></td>
               </tr>
               <% end %>
             </tbody>
            <% else %>
              <p>ユーザーはいません</p>
            <% end %>
        </div>
      </div>
    </div>
</table>